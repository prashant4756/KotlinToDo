<?xml version="1.0" encoding="utf-8"?>
<com.example.intermediatekotlin.customviews.TodoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <CheckBox
        android:id="@+id/isCompleteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="Test"
        app:layout_constraintBaseline_toBaselineOf="@+id/isCompleteCheckBox"
        app:layout_constraintStart_toEndOf="@+id/isCompleteCheckBox" />
</com.example.intermediatekotlin.customviews.TodoView>